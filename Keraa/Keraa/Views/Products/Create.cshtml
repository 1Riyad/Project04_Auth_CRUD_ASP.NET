@using CloudinaryDotNet
@using CloudinaryDotNet.Actions
@model ProductModel



<br />
<br />
<div class="card mb-3" style="max-width: 700px; position: center; margin:0 auto; border:hidden">
    <div class="row g-0">
        <div class="card-img-overlay" style="position: relative;" id="ImgC">
            <img style="border-radius: 12px;
                width: 235px;
                height: 250px;
                margin: 0;
                margin-left:10px;
                position: absolute;
                top: 50%;
                -ms-transform: translateY(-50%);
                transform: translateY(-50%);
                background-color:darkkhaki" />
            <button id="upload_widget" class="cloudinary-button">Upload Image</button>
        </div>
        <div class="col-md-8">
            <div class="card-body" style="text-align: center; margin-left: 35px;">
                <h5 class="card-title"> Add a new Product </h5>

                <center class="card-text">
                    <form asp-action="Create" method="post" class="form-horizontal">
                        <div class="form-group">
                            <label hidden="" asp-for="Id">Id</label>
                            <div>
                                <input hidden="" asp-for="Id" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <div>
                                <input asp-for="Name" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="CoverImage">CoverImage</label>
                            <div>
                                <input id="imageInput" asp-for="CoverImage" />
                                <span asp-validation-for="CoverImage" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ShortDesc">Description</label>
                            <div>
                                <textarea asp-for="ShortDesc" rows="8" cols="35"></textarea>
                                <span asp-validation-for="ShortDesc" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Catagory">Catagory</label>
                            <div>
                                <input asp-for="Catagory" />
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Submit" />
                        </div>
                    </form>
                </center>
            </div>
        </div>

    </div>
    <div style="position:absolute; margin-left:10px;">
        <button type="button" class="close" aria-label="Close">
            <a href="/Products/" class="stretched-link">

            </a>
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>




<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script type="text/javascript">
    var ig;
    var myWidget = cloudinary.createUploadWidget({
        cloudName: 'riodan',
        uploadPreset: 'ImgeCover',
        maxFiles: 1
    }, (error, result) => {
        if (!error && result && result.event === "success") {
            console.log('Done! Here is the image info: ', result.info);
            ig = result.info.secure_url;
            df.value = ig;
            coverImage.childNodes[1].src = ig;// to fetch the img source for #ImgC
            var h = coverImage.childNodes[1]
            console.log(h)
        }
    })
    document.getElementById("upload_widget").addEventListener("click", function () {
        myWidget.open();
    }, false);
    var df = document.getElementById("imageInput");
    var coverImage = document.getElementById("ImgC")
</script>