@model ProductModel

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Id">Id</label>
        <div>
            <input asp-for="Id" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <div>
            <input asp-for="Name" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CoverImage">CoverImage</label>
        <div>
            <input asp-for="CoverImage" />
            <span asp-validation-for="CoverImage" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ShortDesc">Description</label>
        <div>
            <input asp-for="ShortDesc" />
            <span asp-validation-for="ShortDesc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Catagory">Catagory</label>
        <div>
            <input asp-for="Catagory" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</form>
